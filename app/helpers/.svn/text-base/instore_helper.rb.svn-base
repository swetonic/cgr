# Methods added to this helper will be available to all templates in the application.
module InstoreHelper

  def week_format(week_start, week_end)
    "#{week_start.strftime("%m/%d/%Y")} through #{week_end.strftime("%m/%d/%Y")}"
  end

  def time_from_seconds(total_seconds)
    "#{(total_seconds / 60) / 60} hours #{(total_seconds / 60) % 60} minutes."
  end

end











